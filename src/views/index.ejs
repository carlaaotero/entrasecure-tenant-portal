<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>
    <%= title %> · EntraSecure
  </title>

  <!-- Design foundation -->
  <link rel="stylesheet" href="/css/foundation.css" />

  <!-- Utilities -->
  <link rel="stylesheet" href="/css/utilities.css" />

  <!-- Components -->
  <link rel="stylesheet" href="/css/components/navbar.css" />
  <link rel="stylesheet" href="/css/components/button.css" />
  <link rel="stylesheet" href="/css/components/card.css" />
  <link rel="stylesheet" href="/css/components/avatar.css" />
  <link rel="stylesheet" href="/css/components/confirmModal.css" />

  <!-- Page-specific -->
  <link rel="stylesheet" href="/css/pages/home.css" />
</head>

<body>
  <!-- Simple navbar -->
  <nav class="navbar">
    <div class="navbar-left">
      <div class="brand">EntraSecure Tenant Portal</div>
      <ul class="nav-links">
        <li>
          <a href="/" class="nav-link nav-link-active">Home</a>
        </li>
        <% if (user) { %>
          <li><a href="/me" class="nav-link">My Identity</a></li>
          <li><a href="/tenant" class="nav-link">Tenant Explorer</a></li>
          <li><a href="/security" class="nav-link">Security</a></li>
        <% } %>
      </ul>
    </div>

    <div class="navbar-right">
      <% if (user) { %>
        <div class="user-menu">
  <button type="button" class="user-pill" id="userMenuBtn" aria-haspopup="true" aria-expanded="false">
    <span class="user-initial">
      <% if (user.name) { %>
        <%= user.name.charAt(0).toUpperCase() %>
      <% } else if (user.username) { %>
        <%= user.username.charAt(0).toUpperCase() %>
      <% } else { %>
        U
      <% } %>
    </span>

    <span class="user-name">
      <%= user.name || user.username || 'User' %>
    </span>
  </button>

  <!-- Dropdown -->
  <div class="user-dropdown" id="userDropdown" style="display:none;">
    <a class="user-dropdown-item" href="/me">My Identity</a>

<button
  type="button"
  class="user-dropdown-item user-dropdown-danger"
  id="logoutBtn">
  Logout
</button>

<form
  id="logoutForm"
  method="GET"
  action="/auth/logout"
  data-confirm="true"
  data-confirm-title="Confirmació"
  data-confirm-message="Segur que vols tancar la sessió?"
  data-confirm-ok="Logout"
  data-confirm-cancel="Cancel·lar"
  style="display:none;">
</form>



      <% } else { %>
        <a href="/auth/login" class="btn btn-outline-light">Sign in</a>
      <% } %>
    </div>
  </nav>

  <main>
    <% if (flash && flash.message) { %>
  <div class="card" style="margin: 12px auto; padding: 12px; max-width: 720px;">
    <strong>
      <%= flash.type==='error' ? 'Error' : (flash.type==='success' ? 'OK' : 'Info') %>:
    </strong>
    <span><%= flash.message %></span>
  </div>
<% } %>

    <!-- Hero -->
    <section class="hero">
      <div class="hero-inner">
        <h1>Welcome to EntraSecure Tenant Portal</h1>
        <p class="hero-subtitle">
          A learning portal to explore Microsoft Entra ID (Azure AD) through a custom web app built with Node.js,
          Express and Microsoft Graph.
        </p>

        <% if (!user) { %>
          <div class="hero-cta-wrapper">
            <a href="/auth/login" class="btn btn-primary hero-cta">
              Sign in with Microsoft Entra ID
            </a>
          </div>
        <% } else { %>
          <div class="profile-card">
            <div class="profile-avatar">
              <span>
                <% if (user.name) { %>
                  <%= user.name.charAt(0).toUpperCase() %>
                <% } else if (user.username) { %>
                  <%= user.username.charAt(0).toUpperCase() %>
                <% } else { %>
                  U
                <% } %>
              </span>
            </div>
            <div class="profile-info">
              <div class="profile-name">
                <%= user.name || 'Signed-in user' %>
              </div>
              <div class="profile-upn">
                <%= user.username || '' %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </section>

    <!-- Project info -->
    <section class="info-section">
      <div class="info-intro">
        <h2>About this portal</h2>
        <p>
          EntraSecure Tenant Portal is my Bachelor's Thesis (Telematics Engineering). It is a self-built IAM portal that
          reproduces and simplifies key features of the Microsoft Entra Admin Center, focusing on users, groups,
          applications and roles through Microsoft Graph.
        </p>
      </div>

      <div class="info-grid">
        <article class="card">
          <h3>Project goals</h3>
          <ul>
            <li>Explore IAM objects: users, groups, enterprise apps and directory roles.</li>
            <li>Understand delegated access and token-based authentication (OIDC/OAuth2) with MSAL.</li>
            <li>See identity relationships: memberships and role assignments.</li>
            <li>Apply internal RBAC for the portal using App Roles (claims-based authorization).</li>
          </ul>
        </article>

        <article class="card">
          <h3>Key technologies</h3>
          <ul class="tech-list">
            <li><strong>Node.js</strong> v20.17.0</li>
            <li><strong>Express</strong> 5 + <strong>EJS</strong> as view engine</li>
            <li><strong>MSAL Node</strong> for OIDC / OAuth2 authentication</li>
            <li><strong>Microsoft Graph API</strong> to access tenant data</li>
            <li><strong>express-session</strong> for user session management</li>
          </ul>
        </article>
      </div>
    </section>
  </main>

  <footer class="footer">
    <small>&copy; <%= new Date().getFullYear() %> EntraSecure · TFG</small>
  </footer>

  <!-- Modal global -->
<%- include('components/confirmModal', {
  title: 'Confirmació',
  message: 'Segur que vols continuar?',
  okText: 'Acceptar',
  cancelText: 'Cancel·lar'
}) %>

<script src="/js/confirmModal.js"></script>

<script>
  (function () {
    const btn = document.getElementById('userMenuBtn');
    const dd = document.getElementById('userDropdown');
    if (!btn || !dd) return;

    function open() {
      dd.style.display = 'block';
      btn.setAttribute('aria-expanded', 'true');
    }
    function close() {
      dd.style.display = 'none';
      btn.setAttribute('aria-expanded', 'false');
    }

    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const isOpen = dd.style.display === 'block';
      if (isOpen) close(); else open();
    });

    document.addEventListener('click', (e) => {
      if (btn.contains(e.target) || dd.contains(e.target)) return;
      close();
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') close();
    });

const logoutBtn = document.getElementById('logoutBtn');
const logoutForm = document.getElementById('logoutForm');

if (logoutBtn && logoutForm) {
  logoutBtn.addEventListener('click', () => {
    close(); // tanquem dropdown
    logoutForm.requestSubmit ? logoutForm.requestSubmit() : logoutForm.submit();
  });
}


  })();
</script>



</body>

</html>
