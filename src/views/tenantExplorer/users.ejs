<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>
        <%= title %> · EntraSecure
    </title>

    <!-- Design foundation -->
    <link rel="stylesheet" href="/css/foundation.css" />
    <!-- Utilities -->
    <link rel="stylesheet" href="/css/utilities.css" />

    <!-- Components -->
    <link rel="stylesheet" href="/css/components/navbar.css" />
    <link rel="stylesheet" href="/css/components/button.css" />
    <link rel="stylesheet" href="/css/components/card.css" />
    <link rel="stylesheet" href="/css/components/avatar.css" />

    <!-- Page-specific -->
    <link rel="stylesheet" href="/css/pages/tenantUsers.css" />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <div class="brand">EntraSecure Tenant Portal</div>
            <ul class="nav-links">
                <li><a href="/" class="nav-link">Home</a></li>
                <% if (user) { %>
                    <li><a href="/me" class="nav-link">My Identity</a></li>
                    <li><a href="/tenant" class="nav-link nav-link-active">Tenant Explorer</a></li>
                    <li><a href="/security" class="nav-link">Security</a></li>
                    <% } %>
            </ul>
        </div>

        <div class="navbar-right">
            <% if (user) { %>
                <div class="user-pill">
                    <span class="user-initial">
                        <% if (user.name) { %>
                            <%= user.name.charAt(0).toUpperCase() %>
                                <% } else if (user.username) { %>
                                    <%= user.username.charAt(0).toUpperCase() %>
                                        <% } else { %>U<% } %>
                    </span>

                    <span class="user-name">
                        <%= user.name || user.username || 'Usuari' %>
                    </span>
                </div>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-outline-light">Login</a>
                    <% } %>
        </div>
    </nav>

    <main class="tenant-users-main">
        <section class="tenant-users-layout">

            <header class="users-header">
                <h1>Usuaris del tenant</h1>
                <p>
                    Llista d'usuaris de Microsoft Entra ID amb informació bàsica:
                    Display Name, UPN, tipus d'usuari i estat del compte.
                </p>
            </header>

            <!-- CARD / CREAR NOU USUARI -->
            <!-- CARD / CREAR NOU USUARI -->
<article class="card users-card create-user-card">
  <div class="users-card-header">
    <div class="users-header-left">
      <h2>Crear un usuari nou</h2>
      <p class="users-meta">
        Dona d'alta un usuari Member amb una contrasenya inicial segura.
      </p>
    </div>
  </div>

  <form method="POST" action="/tenant/users/create" class="create-user-form">
    <div class="users-card-body create-user-body">

      <div class="create-user-grid">
        <!-- Columna esquerra -->
        <div class="create-user-col">
          <div class="form-group">
            <label for="newDisplayName">Nom complet (Display Name)</label>
            <input
              id="newDisplayName"
              type="text"
              name="displayName"
              required
              class="users-input"
              autocomplete="off"
            />
          </div>

          <div class="form-group">
            <label for="newUserPrincipalName">User Principal Name (UPN)</label>
            <input
              id="newUserPrincipalName"
              type="email"
              name="userPrincipalName"
              required
              class="users-input"
              placeholder="nom@carlaaoterooutlook.onmicrosoft.com"
            />
            <small class="field-hint">
              Es genera automàticament a partir del nom, però el pots ajustar.
            </small>
          </div>
        </div>

        <!-- Columna dreta -->
        <div class="create-user-col">
          <div class="form-group">
            <label for="newUserPassword">Contrasenya inicial</label>
            <input
              id="newUserPassword"
              type="password"
              name="password"
              required
              minlength="8"
              class="users-input"
              autocomplete="new-password"
            />
            <div class="password-meter">
              <div id="passwordStrengthBar" class="password-meter-bar"></div>
            </div>
            <small id="passwordStrengthText" class="password-hint">
              La contrasenya ha de tenir mínim 8 caràcters i combinar majúscules,
              minúscules, números i, idealment, algun símbol.
            </small>
          </div>
        </div>
      </div>

      <div class="create-user-actions">
        <button
          id="createUserBtn"
          type="submit"
          class="btn btn-primary"
          disabled
        >
          Crear usuari
        </button>
      </div>
    </div>
  </form>
</article>



            <!-- Un ÚNIC formulari que engloba les dues cards (llista + inactius) -->
            <form method="POST" action="/tenant/users/delete"
                onsubmit="return confirm('Vols eliminar els usuaris seleccionats del tenant? Aquesta acció és irreversible.');">

                <!-- CARD 1: Llista completa d'usuaris -->
                <article class="card users-card">
                    <div class="users-card-header">
                        <div class="users-header-left">
                            <h2>Llista d'usuaris</h2>
                            <p class="users-meta">
                                <span class="users-meta-count">
                                    <%= users && users.length ? users.length : 0 %>
                                </span> usuaris trobats
                            </p>
                        </div>

                        <div class="users-header-right">
                            <div class="users-filters">
                                <input id="userSearch" type="text" class="users-search-input"
                                    placeholder="Cerca per nom o UPN"
                                    onkeydown="if (event.key === 'Enter') { event.preventDefault(); }" />

                                <select id="userTypeFilter" class="users-type-filter">
                                    <option value="all">Tots els tipus</option>
                                    <option value="member">Members</option>
                                    <option value="guest">Guests</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                Eliminar seleccionats
                            </button>
                        </div>
                    </div>

                    <div class="users-card-body">
                        <% if (users && users.length> 0) { %>
                            <table class="users-table">
                                <thead>
                                    <tr>
                                        <th>Display Name</th>
                                        <th>User Principal Name</th>
                                        <th>User Type</th>
                                        <th>Estat</th>
                                        <th>Seleccionar</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% users.forEach(function (u) { %>
                                        <tr data-display-name="<%= u.displayName || '' %>"
                                            data-upn="<%= u.userPrincipalName || '' %>"
                                            data-type="<%= (u.userType || '').toLowerCase() %>">
                                            <td>
                                                <a href="/tenant/users/<%= encodeURIComponent(u.id) %>"
                                                    class="users-link">
                                                    <%= u.displayName || '(Sense nom)' %>
                                                </a>
                                            </td>

                                            <td>
                                                <%= u.userPrincipalName || '' %>
                                            </td>
                                            <td>
                                                <%= u.userType || '—' %>
                                            </td>

                                            <td>
                                                <span
                                                    class="badge <%= u.accountEnabled ? 'badge-ok' : 'badge-disabled' %>">
                                                    <%= u.accountEnabled ? 'Enabled' : 'Disabled' %>
                                                </span>
                                            </td>

                                            <td class="users-select-cell">
                                                <input type="checkbox" name="userIds" value="<%= u.id %>" />
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <p class="users-empty">
                                    No s'ha trobat cap usuari o no es pot llegir la informació.
                                </p>
                                <% } %>
                    </div>
                </article>

                <!-- CARD 2: Usuaris inactius (per dies sense login) -->
                <article class="card users-card inactive-card">
                    <div class="users-card-header">
                        <div class="users-header-left">
                            <h2>Usuaris inactius (sign-in)</h2>
                            <p class="users-meta">
                                Usuaris que fa més de X dies que no inicien sessió.
                            </p>
                        </div>

                        <div class="users-header-right">
                            <div class="users-filters">
                                <label for="inactiveDays" class="inactive-label">
                                    Dies sense activitat:
                                </label>
                                <input id="inactiveDays" type="number" min="0" value="1" class="inactive-days-input" />
                            </div>

                            <button type="submit" class="btn btn-primary">
                                Eliminar seleccionats
                            </button>
                        </div>
                    </div>

                    <div class="users-card-body">
                        <% if (users && users.length> 0) { %>
                            <table class="users-table inactive-users-table">
                                <thead>
                                    <tr>
                                        <th>Display Name</th>
                                        <th>User Principal Name</th>
                                        <th>User Type</th>
                                        <th>Últim sign-in</th>
                                        <th>Dies sense sign-in</th>
                                        <th>Seleccionar</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% users.forEach(function (u) { %>
                                        <tr data-last-signin="<%= u.signInActivity && u.signInActivity.lastSignInDateTime ? u.signInActivity.lastSignInDateTime : '' %>"
                                            data-type="<%= (u.userType || '').toLowerCase() %>">
                                            <td>
                                                <a href="/tenant/users/<%= encodeURIComponent(u.id) %>"
                                                    class="users-link">
                                                    <%= u.displayName || '(Sense nom)' %>
                                                </a>
                                            </td>

                                            <td>
                                                <%= u.userPrincipalName || '' %>
                                            </td>
                                            <td>
                                                <%= u.userType || '—' %>
                                            </td>

                                            <td>
                                                <% if (u.signInActivity && u.signInActivity.lastSignInDateTime) { %>
                                                    <%= u.signInActivity.lastSignInDateTime %>
                                                        <% } else { %>
                                                            <span class="muted-text">Sense dades</span>
                                                            <% } %>
                                            </td>

                                            <td class="inactive-days-cell">
                                                <!-- El valor real el calcularem via JS, aquí només posem un placeholder -->
                                                <span class="inactive-days-value">–</span>
                                            </td>

                                            <td class="users-select-cell">
                                                <input type="checkbox" name="userIds" value="<%= u.id %>" />
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <p class="users-empty">
                                    No hi ha usuaris per analitzar inactivitat.
                                </p>
                                <% } %>
                    </div>
                </article>

            </form>

        </section>
    </main>

    <footer class="footer">
        <small>&copy; <%= new Date().getFullYear() %> EntraSecure · TFG</small>
    </footer>

    <!-- JS: filtres + inactivitat -->
    <script>
        (function () {
            // --- Filtres de la taula principal ---
            const searchInput = document.getElementById('userSearch');
            const typeFilter = document.getElementById('userTypeFilter');
            const rows = Array.from(document.querySelectorAll('.users-table tbody tr'));
            const countSpan = document.querySelector('.users-meta-count');

            function applyUserFilters() {
                const term = (searchInput?.value || '').trim().toLowerCase();
                const type = (typeFilter?.value || 'all').toLowerCase();

                let visibleCount = 0;

                rows.forEach(row => {
                    const dn = (row.dataset.displayName || '').toLowerCase();
                    const upn = (row.dataset.upn || '').toLowerCase();
                    const userType = (row.dataset.type || '').toLowerCase();

                    const matchesText =
                        !term || dn.includes(term) || upn.includes(term);

                    const matchesType =
                        type === 'all' || userType === type;

                    const visible = matchesText && matchesType;

                    row.style.display = visible ? '' : 'none';

                    if (visible) visibleCount++;
                });

                if (countSpan) countSpan.textContent = visibleCount;
            }

            searchInput?.addEventListener('input', applyUserFilters);
            typeFilter?.addEventListener('change', applyUserFilters);

            // --- Card d'usuaris inactius ---
            const inactiveInput = document.getElementById('inactiveDays');
            const inactiveRows = Array.from(
                document.querySelectorAll('.inactive-users-table tbody tr')
            );

            function applyInactiveFilter() {
                if (!inactiveInput) return;

                const raw = inactiveInput.value;
                let days = parseInt(raw, 10);
                if (isNaN(days) || days < 0) days = 1; // per defecte, 1 dia

                const now = new Date();

                inactiveRows.forEach(row => {
                    const last = row.dataset.lastSignin;
                    const cell = row.querySelector('.inactive-days-value');

                    let diffDays;

                    if (!last) {
                        // Sense dades de sign-in → considerem molt inactiu
                        diffDays = Infinity;
                    } else {
                        const d = new Date(last);
                        if (isNaN(d.getTime())) {
                            diffDays = Infinity;
                        } else {
                            const ms = now - d;
                            diffDays = ms / (1000 * 60 * 60 * 24);
                        }
                    }

                    // Actualitzem el text "X dies" si tenim valor finite
                    if (cell) {
                        if (diffDays === Infinity) {
                            cell.textContent = 'N/A';
                        } else {
                            cell.textContent = Math.floor(diffDays);
                        }
                    }

                    const show = diffDays >= days;
                    row.style.display = show ? '' : 'none';
                });
            }

            inactiveInput?.addEventListener('input', applyInactiveFilter);

            // Aplicar filtres inicials
            applyUserFilters();
            applyInactiveFilter();





                    // --- Crear usuari: auto-UPN i força de contrasenya ---
        const displayNameInput = document.getElementById('newDisplayName');
        const upnInput = document.getElementById('newUserPrincipalName');
        const passwordInput = document.getElementById('newUserPassword');
        const strengthBar = document.getElementById('passwordStrengthBar');
        const strengthText = document.getElementById('passwordStrengthText');
        const createBtn = document.getElementById('createUserBtn');

        const UPN_DOMAIN = 'carlaaoterooutlook.onmicrosoft.com';
        let upnTouched = false;

        if (upnInput) {
          upnInput.addEventListener('input', () => {
            upnTouched = true;
          });
        }

        function slugifyName(name) {
          return name
            .normalize('NFD').replace(/[\u0300-\u036f]/g, '') // treure accents
            .toLowerCase()
            .trim()
            .replace(/\s+/g, '.')          // espais -> punts
            .replace(/[^a-z0-9.]/g, '');   // només lletres, números i punt
        }

        function updateUPNFromDisplayName() {
          if (!displayNameInput || !upnInput || upnTouched) return;
          const base = slugifyName(displayNameInput.value);
          upnInput.value = base
            ? `${base}@${UPN_DOMAIN}`
            : '';
        }

        displayNameInput?.addEventListener('input', updateUPNFromDisplayName);
        displayNameInput?.addEventListener('blur', updateUPNFromDisplayName);

        function evaluatePasswordStrength(pwd) {
          if (!pwd) {
            strengthBar.className = 'password-meter-bar';
            strengthBar.style.width = '0%';
            strengthText.textContent =
              'La contrasenya ha de tenir mínim 8 caràcters i combinar majúscules, minúscules i números.';
            if (createBtn) createBtn.disabled = true;
            return;
          }

          const lengthOK = pwd.length >= 8;
          const hasLower = /[a-z]/.test(pwd);
          const hasUpper = /[A-Z]/.test(pwd);
          const hasDigit = /\d/.test(pwd);
          const hasSpecial = /[^A-Za-z0-9]/.test(pwd);

          const categories = [hasLower, hasUpper, hasDigit, hasSpecial].filter(Boolean).length;
          const strong = lengthOK && categories >= 3;   // similar a requeriments d'Azure
          const medium = lengthOK && categories === 2;

          strengthBar.className = 'password-meter-bar';

          if (!lengthOK || categories === 0) {
            strengthBar.classList.add('password-weak');
            strengthText.textContent = 'Massa dèbil. Afegeix més longitud i combinació.';
          } else if (medium) {
            strengthBar.classList.add('password-medium');
            strengthText.textContent = 'Acceptable, però recomanable afegir més complexitat.';
          } else if (strong) {
            strengthBar.classList.add('password-strong');
            strengthText.textContent = 'Correcte per a les polítiques de complexitat.';
          }

          if (createBtn) {
            createBtn.disabled = !strong;
          }
        }

        passwordInput?.addEventListener('input', (e) => {
          evaluatePasswordStrength(e.target.value || '');
        });

        // estat inicial
        evaluatePasswordStrength('');


        })();
    </script>

</body>

</html>