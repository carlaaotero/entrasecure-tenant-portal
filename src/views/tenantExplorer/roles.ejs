<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>
        <%= title %> Â· EntraSecure
    </title>

    <!-- Design foundation -->
    <link rel="stylesheet" href="/css/foundation.css" />
    <!-- Utilities -->
    <link rel="stylesheet" href="/css/utilities.css" />

    <!-- Components -->
    <link rel="stylesheet" href="/css/components/navbar.css" />
    <link rel="stylesheet" href="/css/components/button.css" />
    <link rel="stylesheet" href="/css/components/card.css" />
    <link rel="stylesheet" href="/css/components/avatar.css" />

    <link rel="stylesheet" href="/css/pages/tenantUsers.css" />
    <link rel="stylesheet" href="/css/pages/tenantExplorer.css" />

</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <div class="brand">EntraSecure Tenant Portal</div>
            <ul class="nav-links">
                <li><a href="/" class="nav-link">Home</a></li>
                <% if (user) { %>
                    <li><a href="/me" class="nav-link">My Identity</a></li>
                    <li><a href="/tenant" class="nav-link nav-link-active">Tenant Explorer</a></li>
                    <li><a href="/security" class="nav-link">Security</a></li>
                    <% } %>
            </ul>
        </div>

        <div class="navbar-right">
            <% if (user) { %>
                <div class="user-pill">
                    <span class="user-initial">
                        <% if (user.name) { %>
                            <%= user.name.charAt(0).toUpperCase() %>
                                <% } else if (user.username) { %>
                                    <%= user.username.charAt(0).toUpperCase() %>
                                        <% } else { %>U<% } %>
                    </span>

                    <span class="user-name">
                        <%= user.name || user.username || 'Usuari' %>
                    </span>
                </div>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-outline-light">Login</a>
                    <% } %>
        </div>
    </nav>

    <main class="tenant-users-main">
        <section class="tenant-users-layout">

            <header class="users-header">
                <h1>Roles</h1>
                <p>
                    Group-based role assignments and internal portal roles
                </p>
            </header>

            <div class="roles-layout">

                <!-- LEFT: Portal roles -->
                <article class="card roles-column">
                    <header class="card-header">
                        <h3>Portal roles</h3>
                        <p class="muted">Internal portal roles mapped to Entra ID groups.</p>
                    </header>

                    <div class="card-content users-card-body">
                        <% if (portalRoles && portalRoles.length> 0) { %>
                            <div class="preview-list">
                                <% portalRoles.forEach(function(r) { %>
                                    <div class="preview-item">
                                        <div class="preview-title">
                                            <%= r.key %>
                                        </div>
                                        <div class="preview-meta">
                                            <%= r.description %>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } else { %>
                                <p class="preview-empty">No portal roles defined.</p>
                                <% } %>
                    </div>
                </article>

                <!-- RIGHT: Directory roles -->
                <article class="card roles-column">
                    <header class="card-header">
                        <h3>Directory roles</h3>
                        <p class="muted">Microsoft Entra ID directory roles (tenant governance).</p>
                    </header>

                    <div class="card-content users-card-body">

                        <!-- Activated roles -->
                        <div class="roles-subsection">
                            <div class="roles-subsection-header">
                                <h4 class="section-title">Activated roles</h4>
                                <p class="muted small">Only roles currently activated in the tenant.</p>
                            </div>

                            <div class="roles-subscroll roles-subscroll-small">
                                <% if (directoryRoles && directoryRoles.length> 0) { %>
                                    <div class="preview-list">
                                        <% directoryRoles.forEach(function(r) { %>
                                            <div class="preview-item">
                                                <div class="preview-title">
                                                    <a class="users-link"
                                                        href="/tenant/roles/<%= encodeURIComponent(r.id) %>">
                                                        <%= r.displayName %>
                                                    </a>
                                                </div>

                                                <div class="preview-meta">Role ID: <%= r.id %>
                                                </div>
                                            </div>
                                            <% }); %>
                                    </div>
                                    <% } else { %>
                                        <p class="preview-empty">No activated directory roles found.</p>
                                        <% } %>
                            </div>
                        </div>

                        <hr class="divider" />

                        <!-- All roles (templates) -->
                        <div class="roles-subsection">
                            <div class="roles-subsection-header">
                                <h4 class="section-title">All roles (templates)</h4>
                                <p class="muted small">Full catalog of available directory roles.</p>
                            </div>

                            <div class="roles-subscroll roles-subscroll-large">
                                <% if (roleTemplates && roleTemplates.length> 0) { %>
                                    <div class="preview-list">
                                        <% roleTemplates.forEach(function(t) { %>
                                            <div class="preview-item">
                                                <div class="preview-title">
                                                    <%= t.displayName %>
                                                </div>
                                                <div class="preview-meta">
                                                    <%= (t.description && t.description.length> 0) ? t.description : 'No description available.' %>
                                                </div>
                                            </div>
                                            <% }); %>

                                    </div>
                                    <% } else { %>
                                        <p class="preview-empty">No role templates available.</p>
                                        <% } %>
                            </div>
                        </div>

                    </div>
                </article>



            </div>

        </section>
    </main>



</body>

</html>