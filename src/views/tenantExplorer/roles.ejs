<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>
        <%= title %> · EntraSecure
    </title>

    <!-- Design foundation -->
    <link rel="stylesheet" href="/css/foundation.css" />
    <!-- Utilities -->
    <link rel="stylesheet" href="/css/utilities.css" />

    <!-- Components -->
    <link rel="stylesheet" href="/css/components/navbar.css" />
    <link rel="stylesheet" href="/css/components/button.css" />
    <link rel="stylesheet" href="/css/components/card.css" />
    <link rel="stylesheet" href="/css/components/avatar.css" />
    <link rel="stylesheet" href="/css/components/confirmModal.css" />
    <link rel="stylesheet" href="/css/components/navigation.css" />

    <link rel="stylesheet" href="/css/pages/tenantUsers.css" />
    <link rel="stylesheet" href="/css/pages/tenantExplorer.css" />
    <link rel="stylesheet" href="/css/pages/tenantRoles.css" />
</head>

<body>
    <!-- Navbar -->
    <%- include('../components/navbar', { active: 'tenant' }) %>

        <main class="tenant-users-main">
            <a href="/tenant" class="back-arrow" aria-label="Tornar a Tenant Explorer">
                ←
            </a>
            <section class="tenant-users-layout">
                <header class="users-header">
                    <h1>Roles</h1>
                    <p>
                        Group-based role assignments and internal portal roles
                    </p>
                </header>

                <% if (flash && flash.message) { %>
                    <div class="card" style="margin: 12px 0; padding: 12px;">
                        <strong>
                            <%= flash.type==='error' ? 'Error' : (flash.type==='success' ? 'OK' : 'Info' ) %>:
                        </strong>
                        <span>
                            <%= flash.message %>
                        </span>
                    </div>
                    <% } %>

                        <div class="roles-layout">

                            <!-- LEFT: Portal roles -->
                            <article class="card roles-column">
                                <header class="card-header">
                                    <h3>Portal roles</h3>
                                    <p class="muted">Internal portal roles mapped to Entra ID groups.</p>
                                </header>

                                <div class="card-content users-card-body">
                                    <% if (portalRoles && portalRoles.length> 0) { %>
                                        <div class="preview-list">
                                            <% portalRoles.forEach(function(r) { %>
                                                <div class="preview-item">

                                                    <!-- title + badge -->
                                                    <div class="role-row">
                                                        <div class="preview-title">
                                                            <% if (r.id) { %>
                                                                <a class="users-link"
                                                                    href="/tenant/roles/portal/<%= encodeURIComponent(r.id) %>">
                                                                    <%= r.key %>
                                                                </a>
                                                                <% } else { %>
                                                                    <%= r.key %>
                                                                        <% } %>
                                                        </div>

                                                        <% if (r.isPrivileged) { %>
                                                            <span class="role-badge role-badge-priv">Privileged</span>
                                                            <% } %>
                                                    </div>

                                                    <div class="preview-meta">
                                                        <%= r.description %>
                                                    </div>
                                                </div>
                                                <% }); %>
                                        </div>
                                        <% } else { %>
                                            <p class="preview-empty">No portal roles defined.</p>
                                            <% } %>
                                </div>
                            </article>

                            <!-- RIGHT: Directory roles -->
                            <article class="card roles-column">
                                <header class="card-header">
                                    <h3>Directory roles</h3>
                                    <p class="muted">Microsoft Entra ID directory roles (tenant governance).</p>
                                </header>

                                <div class="card-content users-card-body">

                                    <!-- Activated roles -->
                                    <div class="roles-subsection">
                                        <div class="roles-subsection-header">
                                            <h4 class="section-title">Activated roles</h4>
                                            <p class="muted small">Only roles currently activated in the tenant.</p>
                                        </div>

                                        <div class="roles-subscroll roles-subscroll-small">
                                            <% if (directoryRoles && directoryRoles.length> 0) { %>
                                                <div class="preview-list">
                                                    <% directoryRoles.forEach(function(r) { %>
                                                        <div class="preview-item">

                                                            <!-- title + badge -->
                                                            <div class="role-row">
                                                                <div class="preview-title">
                                                                    <a class="users-link"
                                                                        href="/tenant/roles/<%= encodeURIComponent(r.id) %>">
                                                                        <%= r.displayName %>
                                                                    </a>
                                                                </div>

                                                                <% if (r.isPrivileged) { %>
                                                                    <span
                                                                        class="role-badge role-badge-priv">Privileged</span>
                                                                    <% } %>
                                                            </div>

                                                            <div class="preview-meta">Role ID: <%= r.id %>
                                                            </div>
                                                        </div>
                                                        <% }); %>
                                                </div>
                                                <% } else { %>
                                                    <p class="preview-empty">No activated directory roles found.</p>
                                                    <% } %>
                                        </div>
                                    </div>

                                    <hr class="divider" />

                                    <!-- All roles (templates) -->
                                    <div class="roles-subsection">
                                        <div class="roles-subsection-header">
                                            <h4 class="section-title">All roles (templates)</h4>
                                            <p class="muted small">Full catalog of available directory roles.</p>
                                        </div>

                                        <!-- local helper: per templates no tenim isPrivileged del backend -->
                                        <% const privilegedKeywords=[ 'Global Administrator' , 'Privileged'
                                            , 'Security Administrator' , 'Conditional Access'
                                            , 'Authentication Administrator' , 'User Administrator'
                                            , 'Groups Administrator' , 'Application Administrator'
                                            , 'Cloud Application Administrator' , 'Intune Administrator'
                                            , 'Exchange Administrator' , 'SharePoint Administrator'
                                            , 'Teams Administrator' , ]; function isPrivilegedTemplate(name) { const
                                            n=(name || '' ).toLowerCase(); return privilegedKeywords.some(k=>
                                            n.includes(k.toLowerCase()));
                                            }
                                            %>

                                            <div class="roles-subscroll roles-subscroll-large">
                                                <div class="roles-search">
                                                    <input id="roleTemplateSearch" type="text"
                                                        class="users-search-input" placeholder="Search role by name..."
                                                        onkeydown="if (event.key === 'Enter') { event.preventDefault(); }" />
                                                </div>

                                                <% if (roleTemplates && roleTemplates.length> 0) { %>
                                                    <div class="preview-list">
                                                        <% roleTemplates.forEach(function(t) { %>
                                                            <div class="preview-item role-template-item"
                                                                data-name="<%= (t.displayName || '').toLowerCase() %>">

                                                                <!-- title + badge -->
                                                                <div class="role-row">
                                                                    <div class="preview-title">
                                                                        <form method="POST"
                                                                            action="/tenant/roles/activate"
                                                                            style="display:inline;">
                                                                            <input type="hidden" name="templateId"
                                                                                value="<%= t.id %>" />
                                                                            <button type="submit" class="link-button">
                                                                                <%= t.displayName %>
                                                                            </button>
                                                                        </form>
                                                                    </div>

                                                                    <% if (isPrivilegedTemplate(t.displayName)) { %>
                                                                        <span
                                                                            class="role-badge role-badge-priv">Privileged</span>
                                                                        <% } %>
                                                                </div>

                                                                <div class="preview-meta">
                                                                    <%= (t.description && t.description.length> 0) ?
                                                                        t.description : 'No description available.' %>
                                                                </div>
                                                            </div>
                                                            <% }); %>
                                                    </div>
                                                    <% } else { %>
                                                        <p class="preview-empty">No role templates available.</p>
                                                        <% } %>
                                            </div>
                                    </div>

                                </div>
                            </article>

                        </div>

            </section>
        </main>

        <script>
            (function () {
                const input = document.getElementById('roleTemplateSearch');
                const items = Array.from(document.querySelectorAll('.role-template-item'));

                if (!input || items.length === 0) return;

                function applyFilter() {
                    const term = (input.value || '').trim().toLowerCase();
                    let visible = 0;

                    items.forEach(el => {
                        const name = el.dataset.name || '';
                        const show = !term || name.includes(term);
                        el.style.display = show ? '' : 'none';
                        if (show) visible++;
                    });
                }

                input.addEventListener('input', applyFilter);
                applyFilter();
            })();
        </script>


        <!-- Modal global -->
        <%- include('../components/confirmModal', { title: 'Confirmation' ,
            message: 'Are you sure you want to continue?' , okText: 'Confirm' , cancelText: 'Cancel' }) %>

            <script src="/js/confirmModal.js"></script>
            <script src="/js/navbar.js"></script>

            <footer class="footer">
                <small>&copy; <%= new Date().getFullYear() %> EntraSecure · TFG</small>
            </footer>

</body>

</html>