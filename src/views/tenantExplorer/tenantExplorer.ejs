<!DOCTYPE html>
<html lang="ca">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>
    <%= title %>
  </title>

  <!-- Design foundation -->
  <link rel="stylesheet" href="/css/foundation.css" />
  <!-- Utilities -->
  <link rel="stylesheet" href="/css/utilities.css" />

  <!-- Components -->
  <link rel="stylesheet" href="/css/components/navbar.css" />
  <link rel="stylesheet" href="/css/components/button.css" />
  <link rel="stylesheet" href="/css/components/card.css" />
  <link rel="stylesheet" href="/css/components/avatar.css" />
  <link rel="stylesheet" href="/css/components/confirmModal.css" />

  <!-- Page-specific -->
  <link rel="stylesheet" href="/css/pages/tenantExplorer.css" />
</head>

<body>
  <!-- Navbar -->
  <%- include('../components/navbar', { active: 'tenant' }) %>

  <main class="tenant-main">
    <section class="tenant-section">

      <div class="info-grid">
        <!-- Users -->
        <article class="card tenant-card">
          <header class="tenant-card-header">
            <h3>Users</h3>
            <button class="btn btn-primary" onclick="location.href='/tenant/users'">
              View
            </button>
          </header>
          <div class="tenant-card-body tenant-card-scroll">
            <% if (usersPreview && usersPreview.length> 0) { %>

              <div class="preview-list">
                <% usersPreview.forEach(function (u) { %>
                  <div class="preview-item">
                    <div class="preview-title">
                      <%= u.displayName || '(Sense nom)' %>
                    </div>
                    <div class="preview-meta">
                      <%= u.userPrincipalName %>
                    </div>
                    <div class="preview-type">
                      <%= u.userType %>
                    </div>
                  </div>
                  <% }); %>
              </div>

              <% } else { %>
                <p class="preview-empty">No s'han pogut carregar usuaris del tenant.</p>
                <% } %>
          </div>
        </article>

        <!-- Groups -->
        <article class="card tenant-card">
          <header class="tenant-card-header">
            <h3>Groups</h3>
            <button class="btn btn-primary" onclick="location.href='/tenant/groups'">
              View
            </button>
          </header>
          <div class="tenant-card-body tenant-card-scroll">
            <% if (groupsPreview && groupsPreview.length> 0) { %>
              <div class="preview-list">
                <% groupsPreview.forEach(function (g) { %>
                  <div class="preview-item">
                    <div class="preview-title">
                      <%= g.displayName || '(Sense nom)' %>
                    </div>
                    <div class="preview-meta">
                      ID: <%= g.id %>
                    </div>
                    <div class="preview-type">
                      <% if (g.groupTypes && g.groupTypes.length> 0) { %>
                        <%= g.groupTypes.join(', ') %>
            <% } else { %>
              Security group
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p class="preview-empty">
      No s' han pogut carregar grups del tenant. </p>
                          <% } %>
                    </div>

        </article>

        <!-- Roles -->
        <article class="card tenant-card">
          <header class="tenant-card-header">
            <h3>Roles</h3>
            <button class="btn btn-primary" onclick="location.href='/tenant/roles'">
              View
            </button>
          </header>
          <div class="tenant-card-body">
            <div class="preview-list">
              <div class="preview-item">
                <div class="preview-title">Directory Roles</div>
                <div class="preview-meta">Group-based role assignments</div>
              </div>
              <div class="preview-item">
                <div class="preview-title">Portal RBAC</div>
                <div class="preview-meta">Internal portal roles</div>
              </div>
            </div>
          </div>

        </article>

        <!-- Apps -->
        <article class="card tenant-card">
          <header class="tenant-card-header">
            <h3>Applications</h3>
            <button class="btn btn-primary" onclick="location.href='/tenant/apps'">
              View
            </button>
          </header>

          <div class="tenant-card-body tenant-card-scroll">
            <% if (appsPreview && appsPreview.length> 0) { %>
              <div class="preview-list">
                <% appsPreview.forEach(function (a) { %>
                  <div class="preview-item">
                    <div class="preview-title">
                      <%= a.displayName || '(Sense nom)' %>
                    </div>
                    <div class="preview-meta">
                      App ID: <%= a.appId || '—' %>
                    </div>
                  </div>
                  <% }); %>
              </div>
              <% } else { %>
                <p class="preview-empty">
                  No s'han pogut carregar aplicacions del tenant.
                </p>
                <% } %>

          </div>
        </article>

      </div>

    </section>
  </main>

  <!-- Modal global -->
<%- include('../components/confirmModal', {
  title: 'Confirmació',
  message: 'Segur que vols continuar?',
  okText: 'Acceptar',
  cancelText: 'Cancel·lar'
}) %>

<script src="/js/confirmModal.js"></script>
<script src="/js/navbar.js"></script>


  <footer class="footer">
    <small>&copy; <%= new Date().getFullYear() %> EntraSecure · TFG</small>
  </footer>
</body>

</html>